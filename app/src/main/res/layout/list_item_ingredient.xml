<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/horizontal_margin"
  android:layout_marginTop="@dimen/vertical_margin"
  android:layout_marginEnd="@dimen/horizontal_margin"
  android:layout_marginBottom="@dimen/vertical_margin">

  <ImageView
    android:id="@+id/ivExpand"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_expand" />

  <TextView
    android:id="@+id/tvName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:fontFamily="@font/lekton_bold"
    android:text="Basil"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
    app:layout_constraintBottom_toBottomOf="@id/ivExpand"
    app:layout_constraintStart_toEndOf="@id/ivExpand"
    app:layout_constraintTop_toTopOf="@id/ivExpand" />

  <TextView
    android:id="@+id/tvQuantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/lekton"
    android:text="6 tbsp"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
    app:layout_constraintBottom_toBottomOf="@id/ivExpand"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/ivExpand" />

</androidx.constraintlayout.widget.ConstraintLayout>